#
# .zplugins - antidote plugins file
#

# Pre-reqs
mattmc3/zephyr path:plugins/zfunctions

# Clone-only utils
mbadolato/iTerm2-Color-Schemes kind:clone

# my custom plugins
$ZDOTDIR/plugins/git
$ZDOTDIR/plugins/python
$ZDOTDIR/plugins/homebrew

# omz
ohmyzsh/ohmyzsh path:plugins/magic-enter
ohmyzsh/ohmyzsh path:plugins/fancy-ctrl-z

# zephyr
mattmc3/zephyr path:plugins/directory
mattmc3/zephyr path:plugins/editor
mattmc3/zephyr path:plugins/environment
mattmc3/zephyr path:plugins/history
mattmc3/zephyr path:plugins/terminal
mattmc3/zephyr path:plugins/utility

# macOS
mattmc3/zephyr path:plugins/macos conditional:is-darwin

# utilities
romkatv/zsh-bench kind:path
rupa/z
mattmc3/zman

# prompt
sindresorhus/pure kind:fpath
romkatv/powerlevel10k kind:fpath
mattmc3/zephyr path:plugins/prompt

# completions
mattmc3/zephyr path:plugins/completion

# conf.d
mattmc3/zephyr path:plugins/confd

# deferred plugins
olets/zsh-abbr kind:defer
zdharma-continuum/fast-syntax-highlighting kind:defer
zsh-users/zsh-autosuggestions kind:defer
zsh-users/zsh-history-substring-search kind:defer

