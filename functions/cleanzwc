if [[ "$1" == "--help" ]] || [[ "$1" == "-h" ]]; then
  echo "cleanzwc"
  echo "  cleans zcompiled files"
  echo "options:"
  echo " -v         Verbose"
  echo " -h --help  Show help screen"
  return 0
elif [[ "$1" == '-v' ]]; then
  find . -type f \( -name "*.zwc" -o -name "*.zwc.old" \)
fi
find . -type f \( -name "*.zwc" -o -name "*.zwc.old" \) -delete
